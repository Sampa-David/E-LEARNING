# Railway E-Learning Platform - Environment Variables
# Copy these to Railway dashboard for your project
# Railway will auto-populate the PostgreSQL variables marked with ${{}}

# ============ APPLICATION CONFIGURATION ============
APP_NAME=E-Learning
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:your-generated-key-here
APP_URL=https://your-domain.railway.app
APP_MAINTENANCE_DRIVER=file

# ============ DATABASE CONFIGURATION ============
# Use Railway's built-in variables for PostgreSQL connection
DB_CONNECTION=pgsql
DB_HOST=${{RAILWAY_PRIVATE_DOMAIN}}
DB_PORT=5432
DB_DATABASE=${{POSTGRES_DB}}
DB_USERNAME=${{POSTGRES_USER}}
DB_PASSWORD=${{POSTGRES_PASSWORD}}

# Complete DATABASE_URL (alternative to individual variables)
DATABASE_URL=postgresql://${{POSTGRES_USER}}:${{POSTGRES_PASSWORD}}@${{RAILWAY_PRIVATE_DOMAIN}}:5432/${{POSTGRES_DB}}

# ============ RAILWAY POSTGRESQL PLUGIN VARIABLES ============
# These are auto-populated by Railway's PostgreSQL plugin
PGDATA=/var/lib/postgresql/data/pgdata
PGDATABASE=${{POSTGRES_DB}}
PGHOST=${{RAILWAY_PRIVATE_DOMAIN}}
PGPASSWORD=${{POSTGRES_PASSWORD}}
PGPORT=5432
PGUSER=${{POSTGRES_USER}}
POSTGRES_DB=railway
POSTGRES_USER=postgres
RAILWAY_DEPLOYMENT_DRAINING_SECONDS=60

# ============ SESSION & SECURITY ============
SESSION_DRIVER=cookie
SESSION_ENCRYPT=true
SESSION_LIFETIME=120
SESSION_DOMAIN=null
SESSION_PATH=/
BCRYPT_ROUNDS=12

# ============ CACHE CONFIGURATION ============
CACHE_STORE=file
CACHE_PREFIX=elearning_

# ============ MAIL CONFIGURATION ============
# Update with your email service credentials
MAIL_DRIVER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=your-mailtrap-username
MAIL_PASSWORD=your-mailtrap-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@elearning.com
MAIL_FROM_NAME=E-Learning Platform

# ============ LOGGING ============
LOG_CHANNEL=stack
LOG_LEVEL=info
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null

# ============ QUEUE & BROADCASTING ============
QUEUE_CONNECTION=sync
BROADCAST_CONNECTION=log

# ============ FILESYSTEM ============
FILESYSTEM_DISK=local

# ============ LOCALE & INTERNATIONALIZATION ============
APP_LOCALE=fr
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=fr_FR

# ============ AUTHENTICATION ============
AUTH_DRIVER=eloquent

# Encryption
CIPHER=AES-256-CBC
