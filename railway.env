# Railway Environment Variables Configuration
# Copy these to Railway dashboard for your project

# Application Configuration
APP_NAME=E-Learning
APP_ENV=production
APP_DEBUG=false
APP_KEY=base64:YOUR_APPLICATION_KEY_HERE
APP_URL=https://your-railway-app.up.railway.app

# Database Configuration (Railway provides DATABASE_URL)
# The DATABASE_URL will be automatically set by Railway's PostgreSQL plugin
# Format: postgresql://username:password@host:port/database
# But we can also configure individual variables:
DB_CONNECTION=pgsql
DB_PORT=5432

# Session Configuration
SESSION_DRIVER=cookie
SESSION_LIFETIME=120
SESSION_ENCRYPT=true

# Cache Configuration  
CACHE_STORE=file
CACHE_PREFIX=elearning_

# Queue Configuration
QUEUE_CONNECTION=sync

# Mail Configuration (update with your email service)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=465
MAIL_USERNAME=your_mailtrap_username
MAIL_PASSWORD=your_mailtrap_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@elearning.app
MAIL_FROM_NAME="E-Learning Platform"

# Locale Configuration
APP_LOCALE=fr
APP_FALLBACK_LOCALE=en

# Log Configuration
LOG_CHANNEL=stack
LOG_LEVEL=info

# Authentication
AUTH_DRIVER=eloquent

# Encryption
CIPHER=AES-256-CBC
